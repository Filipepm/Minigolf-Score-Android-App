<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/hole1score"
        android:layout_width="47dp"
        android:layout_height="57dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:inputType="number"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/shape"
        app:layout_constraintEnd_toStartOf="@+id/breaker"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/shape"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/shape"
        app:layout_constraintEnd_toStartOf="@+id/hole1score"
        app:layout_constraintStart_toEndOf="@+id/player1name"
        app:layout_constraintTop_toTopOf="@+id/shape"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/shape"
        android:layout_width="329dp"
        android:layout_height="63dp"
        android:background="@drawable/box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.341"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357" />

    <TextView
        android:id="@+id/total1score"
        android:layout_width="37dp"
        android:layout_height="32dp"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/shape"
        app:layout_constraintEnd_toEndOf="@+id/shape"
        app:layout_constraintStart_toStartOf="@+id/breaker"
        app:layout_constraintTop_toTopOf="@+id/shape" />

    <TextView
        android:id="@+id/breaker"
        android:layout_width="21dp"
        android:layout_height="63dp"
        android:layout_marginStart="269dp"
        android:layout_marginLeft="269dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:text="|"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/shape"
        app:layout_constraintEnd_toEndOf="@+id/shape"
        app:layout_constraintStart_toStartOf="@+id/shape"
        app:layout_constraintTop_toTopOf="@+id/shape" />

    <TextView
        android:id="@+id/player1name"
        android:layout_width="138dp"
        android:layout_height="47dp"
        android:fontFamily="@font/varela_regular"
        android:text="Filipe"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/shape"
        app:layout_constraintStart_toStartOf="@+id/shape"
        app:layout_constraintTop_toTopOf="@+id/shape" />

</androidx.constraintlayout.widget.ConstraintLayout>